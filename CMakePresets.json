{
  "version": 5,
  "configurePresets":[
    {
      "name": "dev",
      "binaryDir": "build",
      "installDir": "build/install",
      "toolchainFile": "cmake/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
        "CMAKE_VERIFY_INTERFACE_HEADER_SETS": "ON",
        "ARGON_ENABLE_WARNINGS": "ON",
        "ARGON_BUILD_TESTING": "ON",
        "ARGON_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "coverage",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "--coverage"
      }
    },
    {
      "name": "sanitizers",
      "inherits": "dev",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fno-omit-frame-pointer -fno-sanitize-recover=all -fsanitize=address,undefined"
      }
    }
  ],
  "buildPresets":[
    {
      "name": "dev",
      "configurePreset": "dev",
      "jobs": 4,
      "targets": ["install", "all_verify_interface_header_sets"]
    }
  ],
  "testPresets":[
    {
      "name": "dev",
      "configurePreset": "dev",
      "output": {
        "shortProgress": true,
        "outputOnFailure": true
      }
    }
  ]
}
